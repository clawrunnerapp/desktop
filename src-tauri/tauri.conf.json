{
  "$schema": "https://raw.githubusercontent.com/nicoverbruggen/tauri-v2-schema/main/src/tauri.conf.schema.json",
  "productName": "ClawRunner",
  "version": "0.0.1",
  "identifier": "app.clawrunner.desktop",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:1420",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "ClawRunner",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 500,
        "center": true
      }
    ],
    "security": {
      "csp": "default-src 'self'; script-src 'self'; style-src 'self' 'unsafe-inline'; frame-src http://localhost:18789"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": ["resources/"],
    "createUpdaterArtifacts": true
  },
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEI3NkRGQkY2OUQ0MjREMkIKUldRclRVS2Q5dnR0dDI4VFQrQVJJWjB0ZmNJTlVuYTd1Qk5hNFBRZWZJRElMaFVBUThrdTd0bSsK",
      "endpoints": [
        "https://github.com/clawrunnerapp/desktop/releases/latest/download/latest.json"
      ]
    }
  }
}
